<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <h2>Update User</h2>
        <% user.forEach(function(item) { %>
            <form method="POST" action="/update-user">
                <div class="mb-3 ">
                    <input  id="id" value="<%=item.id%>" name="id" hidden>
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%=item.email%>">
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%=item.name%>">
                </div>
                <div style="display: flex; gap: 10px;">
                    <form method="POST" action="/update-user/<%=item.id%>">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                    <form method="GET" action="/user/get-list">
                        <button type="submit" class="btn btn-light">Back</button>
                    </form>
                </div>
            </form>
           <% }); %>
    </div>
</body>

</html>